{
    "version": 2,
    "buildCommand": "npm install && npm run build",
    "outputDirectory": "dist",
    "framework": null,
    "installCommand": "npm install --legacy-peer-deps",
    "functions": {
        "api/**/*.js": {
            "runtime": "nodejs20.x"
        }
    },
    "build": {
        "env": {
            "NODE_VERSION": "20"
        }
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}